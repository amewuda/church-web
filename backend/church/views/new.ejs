<%- include ("partials/header"); %>


<form action="/church" method="post">
    <div class="form-group">
        <label for="ministry">Name of Ministry: </label>
        <input type="text" class="form-control" name="church[name_of_ministry]" id="ministry" placeholder="Name of ministry">
    </div>
    <div class="form-group">
        <label for="speaker">The Speaker: </label>
        <input type="text" class="form-control" name="church[speaker]" id="speaker" placeholder="Speaker">
    </div>
    <div class="form-group">
        <label for="topic">Topic: </label>
        <input type="text" class="form-control" name="church[topic]" id="topic" placeholder="What is the topic">
    </div>
    <div class="form-group">
        <label for="attendance">Attendance: </label>
        <input type="Number" class="form-control" name="church[attendance]" id="attendance" placeholder="Attendance">
    </div>
    <div class="form-group">
        <label for="offering">Offering: </label>
        <input type="Number" class="form-control" name="church[offering]" id="offering" placeholder="Offering">
    </div>
    <div class="form-group">
        <label for="body">The Message: </label>
        <input type="text" class="form-control" name="church[body]" id="body" placeholder="Body">
    </div>
